<Page
    x:Class="App10.BuildingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Back"                           />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Background="Indigo" Height="107">
            <Image Source="Assets/mPark.png" Margin="-40,1,25,9" HorizontalAlignment="Center" Width="275" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Background="Indigo" Height="107">
        </StackPanel>

        <StackPanel Grid.Row="1">
            <ListView x:ConnectionId='2'  IsItemClickEnabled="True"                               >
                <TextBlock Margin="20,0,0,0" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" >Block 1</TextBlock>
            </ListView>

        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <ListView>
                <TextBlock Name="no1" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
            </ListView>
        </StackPanel>

    </Grid>
